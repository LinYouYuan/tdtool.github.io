{
  "name": "tdtool",
  "version": "0.0.1",
  "description": "A modular build tool based on webpack2",
  "main": "lib/index.js",
  "bin": {
    "tdtool": "./bin/cli"
  },
  "repository": "https://github.com/tdtool/tdtool.github.io.git",
  "author": "zhengfeng.yao",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf lib",
    "build": "npm run clean && echo Using Babel && babel --version && babel src --out-dir lib -s",
    "test": "npm run build && mocha --recursive 'test/**/*-spec.js'",
    "test:report": "npm run test && open mochawesome-reports/mochawesome.html",
    "coverage": "nyc --reporter=text --reporter=html --reporter=lcov mocha",
    "coverage:report": "npm run coverage && open coverage/index.html"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ],
    "plugins": [
      "babel-plugin-transform-decorators-legacy",
      "babel-plugin-transform-class-properties",
      "babel-plugin-transform-runtime",
      "babel-plugin-lodash"
    ]
  },
  "nyc": {
    "watermarks": {
      "lines": [
        65,
        80
      ],
      "branches": [
        55,
        70
      ]
    },
    "include": [
      "src/*.js",
      "src/**/*.js"
    ],
    "exclude": [
      "lib",
      "mochawesome-report",
      "node_modules",
      "src/util/exec.js"
    ],
    "extension": [
      ".js"
    ],
    "require": [
      "babel-core/register"
    ],
    "reporter": [],
    "all": true
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-plugin-lodash": "^3.2.11",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "chai": "^3.5.0",
    "coveralls": "^2.13.1",
    "mocha": "^3.3.0",
    "mochawesome": "^2.1.0",
    "nyc": "^10.3.0",
    "rimraf": "^2.6.1"
  },
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "clean-webpack-plugin": "^0.1.16",
    "commander": "^2.9.0",
    "css-loader": "^0.28.0",
    "html-webpack-plugin": "^2.28.0",
    "less": "^2.7.2",
    "less-loader": "^4.0.3",
    "postcss-loader": "^1.3.3",
    "progress-bar-webpack-plugin": "^1.9.3",
    "shelljs": "^0.7.7",
    "source-map-support": "^0.4.14",
    "style-loader": "^0.17.0",
    "webpack": "^2.4.1"
  }
}
