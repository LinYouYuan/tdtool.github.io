{
  "name": "tdtool",
  "version": "0.1.3",
  "description": "A modular build tool based on webpack2",
  "main": "lib/index.js",
  "bin": {
    "tdtool": "./bin/cli"
  },
  "repository": "https://github.com/tdtool/tdtool.github.io.git",
  "author": "zhengfeng.yao",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf lib",
    "build": "npm run clean && echo Using Babel && babel --version && babel src --out-dir lib -s",
    "pub": "npm run build && npm publish",
    "test": "npm run build && mocha --recursive 'test/**/*-spec.js'",
    "test:report": "npm run test && open mochawesome-reports/mochawesome.html",
    "coverage": "nyc --reporter=text --reporter=html --reporter=lcov mocha",
    "coverage:report": "npm run coverage && open coverage/index.html",
    "slush": "slush"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ],
    "plugins": [
      "babel-plugin-transform-decorators-legacy",
      "babel-plugin-transform-class-properties",
      "babel-plugin-transform-runtime",
      "babel-plugin-lodash"
    ]
  },
  "nyc": {
    "watermarks": {
      "lines": [
        65,
        80
      ],
      "branches": [
        55,
        70
      ]
    },
    "include": [
      "src/*.js",
      "src/**/*.js"
    ],
    "exclude": [
      "lib",
      "mochawesome-report",
      "node_modules",
      "src/util/exec.js"
    ],
    "extension": [
      ".js"
    ],
    "require": [
      "babel-core/register"
    ],
    "reporter": [],
    "all": true
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-plugin-lodash": "^3.2.11",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "chai": "^3.5.0",
    "coveralls": "^2.13.1",
    "mocha": "^3.3.0",
    "mochawesome": "^2.1.0",
    "nyc": "^10.3.0",
    "rimraf": "^2.6.1",
    "jshint": "^2.4.1",
    "gulp-jshint": "^1.4.0",
    "gulp": "~3.6.2"
  },
  "dependencies": {
    "babel-core": "^6.24.1",
    "babel-plugin-react-transform": "^2.0.2",
    "babel-polyfill": "^6.23.0",
    "browser-sync": "^2.18.8",
    "clean-webpack-plugin": "^0.1.16",
    "commander": "^2.9.0",
    "css-loader": "^0.28.0",
    "file-loader": "^0.11.1",
    "html-webpack-plugin": "^2.28.0",
    "less": "^2.7.2",
    "less-loader": "^4.0.3",
    "open": "^0.0.5",
    "optimize-css-assets-webpack-plugin": "^3.0.0",
    "postcss-loader": "^1.3.3",
    "progress-bar-webpack-plugin": "^1.9.3",
    "raw-loader": "^0.5.1",
    "react-hot-loader": "3.0.0-beta.7",
    "react-transform-catch-errors": "^1.0.2",
    "react-transform-hmr": "^1.0.4",
    "redbox-react": "^1.3.6",
    "shelljs": "^0.7.7",
    "source-map-support": "^0.4.14",
    "style-loader": "^0.17.0",
    "url-loader": "^0.5.8",
    "webpack": "^2.4.1",
    "webpack-dev-middleware": "^1.10.2",
    "webpack-dev-server": "^2.4.5",
    "webpack-hot-middleware": "^2.18.0",
    "write-file-webpack-plugin": "^4.0.2",
    "glob": "~4.0.0",
    "gulp-util": "^2.2.0",
    "pretty-hrtime": "^0.2.0",
    "archy": "^0.0.2",
    "liftoff": "~0.10.0",
    "chalk": "^0.4.0"
  }
}
